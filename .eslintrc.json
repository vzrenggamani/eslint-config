{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard",
    "prettier/vue",
    "prettier/babel",
    "google"
  ],
  "plugins": ["prettier"],
  "rules": {
    "no-console": "off",
    "no-tabs": "error",
    "max-len": ["error", {"code": 100, "ignoreUrls": true}],
    "lines-around-comment": [
      "error",
      {
        "beforeBlockComment": true,
        "afterBlockComment": true,
        "beforeLineComment": true,
        "afterLineComment": true,
        "allowBlockStart": true,
        "allowBlockEnd": true,
        "allowObjectStart": true,
        "allowObjectEnd": true,
        "allowArrayStart": true,
        "allowArrayEnd": true
      }
    ],
    "curly": ["error", "all"],
    "no-mixed-operators": "error",
    "prettier/prettier": "error"
  }
}
